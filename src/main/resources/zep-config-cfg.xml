<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
                        http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <bean id="globalConf"
        class="org.springframework.beans.factory.config.PropertiesFactoryBean">
        <property name="locations">
            <array>
                <value>file:etc/global.conf</value>
            </array>
        </property>
        <property name="ignoreResourceNotFound" value="true" />
    </bean>

    <bean id="zepPartitioningProps"
        class="org.springframework.beans.factory.config.PropertiesFactoryBean">
        <property name="locations">
            <array>
                <value>classpath:zenoss-zep-partitioning.properties</value>
                <value>file:etc/zenoss-zep/zenoss-zep-partitioning.properties</value>
            </array>
        </property>
        <property name="ignoreResourceNotFound" value="true" />
    </bean>
    
    <bean id="zepConfig" class="org.springframework.beans.factory.config.PropertiesFactoryBean">
        <property name="locations">
            <array>
                <value>classpath:zenoss-zep.properties</value>
                <value>file:etc/zenoss-zep/zenoss-zep.properties</value>
            </array>
        </property>
        <property name="ignoreResourceNotFound" value="true" />
    </bean>

    <bean class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
        <property name="properties" ref="zepConfig"/>
        <property name="systemPropertiesModeName" value="SYSTEM_PROPERTIES_MODE_OVERRIDE"/>        
    </bean>

    <bean id="zepPluginsConfig"
        class="org.springframework.beans.factory.config.PropertiesFactoryBean">
        <property name="locations">
            <array>
                <value>file:etc/zenoss-zep/zenoss-zep-plugins.properties</value>
                <value>classpath:zenoss-zep-plugins.properties</value>
            </array>
        </property>
        <property name="ignoreResourceNotFound" value="true" />
    </bean>

    <bean id="zepIndexDetailsConfig" class="org.springframework.beans.factory.config.PropertiesFactoryBean">
        <property name="locations">
            <array>
                <value>classpath:zenoss-zep-details.properties</value>
            </array>
        </property>
    </bean>
    
    <bean id="zepInstance" class="org.zenoss.zep.impl.ZepInstanceImpl">
        <constructor-arg index="0" ref="zepConfig"/>
    </bean>

</beans>
